{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Home Assistant Assist",
    "version": "1.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "appimage": {
        "bundleMediaFramework": true
      },
      "category": "Utility",
      "targets": "all",
      "identifier": "dev.timmo.home-assistant-assist-desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "shortDescription": "This is a desktop app for Home Assistant Assist."
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Home Assistant Assist",
        "width": 620,
        "height": 300,
        "alwaysOnTop": true,
        "center": true,
        "decorations": false,
        "focus": true,
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "visible": false
      }
    ]
  }
}
